#!/bin/bash
#
# Wrapper around BitTorrent app to control UFW firewall rules


TARGET='transmission-gtk'

if (( $# == 1 )) && [[ $1 =~ ^(-h|--help)$ ]]; then
    cat <<-EOF
	Usage: ${0##*/} [ARGUMENT...]

	Wrapper around $TARGET to control UFW firewall rules.
	EOF
	exit 0
fi

sudo torrential allow
"$TARGET" "$@"
sudo torrential deny
